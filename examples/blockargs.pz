
func grid(width, height, &blk)
	if (!isNull(blk))
		width times with x
			height times with y
				pushScope()
				matrix(:move, x, y, 0)
				blk(x, y, 0)
				popScope()

move(-1.5, -1.5)
grid(4, 4)
	|x:0, y:0|
	if ((x + y) % 2 < 1)
		fill(205, 100, 100)
	else
		fill(0, 255, 100)
	rotate()
		cube()
